<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_violet"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="Violet"
        android:textSize="24sp"
        app:backgroundTint="#7D00FA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_yellow"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/btn_yellow"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="Yellow"
        android:textSize="24sp"
        app:backgroundTint="#FAE000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_green"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginTop="72dp"
        android:text="Reset"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_violet"
        app:layout_constraintVertical_bias="0.102"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/btn_green"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="Green"
        android:textSize="24sp"
        app:backgroundTint="#2FDA11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_blue"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginTop="28dp"
        android:text="Blue"
        android:textSize="24sp"
        app:backgroundTint="#0036FB"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_red"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/btn_red"
        android:layout_width="238dp"
        android:layout_height="70dp"
        android:layout_marginTop="48dp"
        android:text="Red"
        android:textSize="24sp"
        app:backgroundTint="#FF0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#000000"
        app:strokeWidth="5dp" />
</androidx.constraintlayout.widget.ConstraintLayout>